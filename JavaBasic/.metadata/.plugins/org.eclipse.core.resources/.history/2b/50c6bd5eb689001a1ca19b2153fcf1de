package e_oop;

public class Static {
	
	// 클래스를 사용하기 위해선 객체를 생성해서 메모리 위에 올려두어야한다
	// static을 붙이면 객체생성을 하지 않고도 사용할 수 있다
	
	// 값을 공유하기 위해 static을 붙인다
	static int var;
	
	// 메서드에서 인스턴스 변수를 사용하지 않을 때 static을 붙이는 것을 고려한다
	
	// 전역변수 => 인스턴스 변수, 클래스 변수 
	
	public static void main(String[] args) {
		
		
	}
}