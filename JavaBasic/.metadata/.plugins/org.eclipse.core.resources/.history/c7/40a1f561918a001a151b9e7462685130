package e_oop;

public class Fan {
	boolean fanPower;
	boolean fanRotate;
	boolean fanTimer;
	String windStrength;
	
	int angle;
	int timer;
	
	Fan() {
		fanPower = false;
		fanRotate = false;
		fanTimer = false;
		windStrength = "미풍";
		angle = 90;
		timer = 0;
	}
	
	void fanPowerOn() {
		fanPower = true;
		System.out.println("선풍기가 켜졌습니다.");
		System.out.println("현재 " + windStrength + "입니다.");
	}
	
	void fanPowerOff() {
		fanPower = false;
		System.out.println("선풍기가 꺼졌습니다.");
	}
	
	void selectWindStrength(String windStrength) {
		this.windStrength = windStrength;
		System.out.println("현재 " + this.windStrength + "입니다.");
	}
	
	void startTimer() throws InterruptedException {
		fanTimer = true;
		timer *= 60;

		for (int i = timer; i >= 0; i--) {
			timer -= 1;
			if (i % 100 == 0) {
				System.out.println("현재 남은 시간은 " + timer + "초입니다.");
			}
			Thread.sleep(100);
		}
		fanPowerOff();
	}
	
	void showRemainTimer() {
		
}

